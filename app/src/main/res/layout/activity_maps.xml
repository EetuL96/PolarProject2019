<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MapsActivity">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        />
    <LinearLayout
        android:id="@+id/topInfoBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background1"
        android:padding="10dp"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/heartrateImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/heartrate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/gradientImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/lowBpmText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/gradient"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/lowBpmText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LO"
                android:textSize="16dp"
                android:textColor="#FFF"
                app:layout_constraintLeft_toLeftOf="@id/gradientImage"
                app:layout_constraintTop_toBottomOf="@id/gradientImage"
                android:paddingBottom="10dp">
            </TextView>
            <TextView
                android:id="@+id/midBpmText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MID"
                android:textSize="16dp"
                android:textColor="#FFF"
                app:layout_constraintLeft_toLeftOf="@id/gradientImage"
                app:layout_constraintRight_toRightOf="@id/gradientImage"
                app:layout_constraintTop_toBottomOf="@id/gradientImage">
            </TextView>
            <TextView
                android:id="@+id/highBpmText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HI"
                android:textSize="16dp"
                android:textColor="#FFF"
                app:layout_constraintRight_toRightOf="@id/gradientImage"
                app:layout_constraintTop_toBottomOf="@id/gradientImage">
            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/botInfoBox"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/avgBpmText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average BPM:"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/maxBpmText"
            android:textColor="#FFF"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/avgBpmValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/avgBpmText"
            app:layout_constraintBottom_toBottomOf="@id/avgBpmText"
            app:layout_constraintLeft_toRightOf="@id/avgBpmText"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/maxBpmText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max BPM:"
            app:layout_constraintTop_toBottomOf="@id/avgBpmText"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#FFF"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/maxBpmValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/maxBpmText"
            app:layout_constraintBottom_toBottomOf="@id/maxBpmText"
            app:layout_constraintLeft_toLeftOf="@id/avgBpmValue"
            app:layout_constraintRight_toRightOf="@id/avgBpmValue"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration:"
            app:layout_constraintTop_toTopOf="@id/timeValue"
            app:layout_constraintBottom_toBottomOf="@id/timeValue"
            app:layout_constraintRight_toLeftOf="@id/timeValue"
            android:textColor="#FFF"
            android:textSize="16dp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/timeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/distanceValue"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/distanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance:"
            app:layout_constraintTop_toTopOf="@id/distanceValue"
            app:layout_constraintBottom_toBottomOf="@id/distanceValue"
            app:layout_constraintRight_toRightOf="@id/timeText"
            android:textColor="#FFF"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/distanceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timeValue"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:layout_margin="10dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MapsActivity">
    <LinearLayout
        android:id="@+id/infoBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background1"
        android:padding="10dp">
        <ImageView
            android:id="@+id/heartrateImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/heartrate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/gradientImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/lowBpmText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/gradient"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/lowBpmText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60"
                android:textSize="16dp"
                android:textColor="#FFF"
                app:layout_constraintLeft_toLeftOf="@id/gradientImage"
                app:layout_constraintTop_toBottomOf="@id/gradientImage"
                android:paddingBottom="10dp">
            </TextView>
            <TextView
                android:id="@+id/midBpmText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="110"
                android:textSize="16dp"
                android:textColor="#FFF"
                app:layout_constraintLeft_toLeftOf="@id/gradientImage"
                app:layout_constraintRight_toRightOf="@id/gradientImage"
                app:layout_constraintTop_toBottomOf="@id/gradientImage">
            </TextView>
            <TextView
                android:id="@+id/highBpmText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="160"
                android:textSize="16dp"
                android:textColor="#FFF"
                app:layout_constraintRight_toRightOf="@id/gradientImage"
                app:layout_constraintTop_toBottomOf="@id/gradientImage">
            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        map:layout_constraintTop_toBottomOf="@id/infoBox"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
